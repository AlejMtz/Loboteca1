@model Loboteca1.Models.AutorModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Loboteca</title>
    <link rel="stylesheet" href="~/css/AutorCreate.css" />
</head>
<body>
    <!-- Barra de navegación -->
    <header>
        <nav class="navbar">
            <h1>Loboteca - @ViewData["Title"]</h1>
        </nav>
    </header>

    <!-- Formulario -->
    <main>
        <h2>@ViewData["Title"]</h2>

        <form asp-action="Create" method="post" class="formulario-altas">
            <div class="form-group">
                <label asp-for="nombre" class="control-label">Nombre</label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="apellido_paterno" class="control-label">Apellido Paterno</label>
                <input asp-for="apellido_paterno" class="form-control" />
                <span asp-validation-for="apellido_paterno" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="apellido_materno" class="control-label">Apellido Materno</label>
                <input asp-for="apellido_materno" class="form-control" />
                <span asp-validation-for="apellido_materno" class="text-danger"></span>
            </div>

            <div class="botones">
                <input type="submit" value="Crear" class="btn-success" />
                <a asp-action="Index" class="btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
    </footer>

    @section Scripts {
        @await Html.PartialAsync("_ValidationScriptsPartial")
    }
</body>
</html>
