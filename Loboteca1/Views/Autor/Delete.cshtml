@model Loboteca1.Models.AutorModel

@{
    Layout = null;
    ViewData["Title"] = "Eliminar Autor";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/AutorDelete.css" />
</head>
<body>

    <!-- Encabezado principal -->
    <header>
        <nav class="navbar">
            <ul class="logo-left">
                <li>
                    <img src="~/images/logo.png" alt="Logo" class="logo">
                </li>
            </ul>
            <h1>LOBOTECA</h1>
            <ul class="account-right">
                <li>
                    <img src="~/images/cuenta.png" alt="Cuenta" class="icono">
                    <a href="@Url.Action("Perfil", "Perfil")">Cuenta</a>
                </li>
            </ul>
        </nav>
    </header>

    <main>
        <section class="formulario-altas">
            <h2 class="section-title">@ViewData["Title"]</h2>
            <h3>¿Está seguro de que desea eliminar este autor?</h3>

            <div class="detalle-autor">
                <h4>Detalles del Autor</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-4">Nombre</dt>
                    <dd class="col-sm-8">@Model.nombre</dd>

                    <dt class="col-sm-4">Apellido Paterno</dt>
                    <dd class="col-sm-8">@Model.apellido_paterno</dd>

                    <dt class="col-sm-4">Apellido Materno</dt>
                    <dd class="col-sm-8">@Model.apellido_materno</dd>
                </dl>
            </div>

            <!-- Formulario de eliminación -->
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="id" />
                <div class="botones">
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </section>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>

</body>
</html>
