@model IEnumerable<Loboteca1.Models.AutorModel>

@{
     Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Loboteca</title>
    <link rel="stylesheet" href="~/css/AutorIndex.css" />
</head>
<body>
    <!-- Barra de navegación -->
    <header>
        <nav class="navbar">
            <h1>Loboteca - Listado de Autores</h1>
        </nav>

        <nav class="navbar2">
            <ul>
                <li><img src="~/images/libros.png" alt="Libros Electrónicos" class="libros"><a href="@Url.Action("Libros", "Libros")">Libros</a></li>
                <li><img src="~/images/sanciones.png" alt="Sanciones" class="sanciones"><a href="@Url.Action("Sanciones", "Sanciones")">Sanciones</a></li>
                <li><img src="~/images/login.png" alt="Perfil" class="perfil"><a href="@Url.Action("Info_user", "Info_user")">Perfil</a></li>
            </ul>
        </nav>
    </header>

    <!-- Contenedor principal -->
    <main class="main-section">
        <div class="content">
            <div class="table-container">
                <h2>@ViewData["Title"]</h2>

                <p>
                    <a asp-action="Create" class="btn-crear">Crear Nuevo Autor</a>
                </p>

                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().apellido_paterno)</th>
                            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().apellido_materno)</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.apellido_paterno)</td>
                                <td>@Html.DisplayFor(modelItem => item.apellido_materno)</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning">Editar</a> |
                                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Eliminar</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>
</body>
</html>
