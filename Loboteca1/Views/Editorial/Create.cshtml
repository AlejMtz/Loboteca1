@model Loboteca1.Models.EditorialModel

@{
    Layout = null;
    ViewData["Title"] = "Crear Nueva Editorial";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/EditorialCreate.css" />
</head>
<body>

    <!-- Encabezado principal -->
    <header>
        <nav class="navbar">
            <ul class="logo-left">
                <li>
                    <img src="~/images/logo.png" alt="Logo" class="logo">
                </li>
            </ul>
            <h1>LOBOTECA</h1>
            <ul class="account-right">
                <li>
                    <img src="~/images/cuenta.png" alt="Cuenta" class="icono">
                    <a href="@Url.Action("Perfil", "Perfil")">Cuenta</a>
                </li>
            </ul>
        </nav>
    </header>

    <main>
        <section class="main-section">
            <h2 class="section-title">@ViewData["Title"]</h2>

            <!-- Contenedor del formulario -->
            <div class="formulario-altas">
                <form asp-action="Create" method="post">
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label">Nombre de la Editorial</label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Estado" class="control-label">Estado</label>
                        <select asp-for="Estado" class="form-control">
                            @foreach (var estado in ViewBag.Estados)
                            {
                                <option value="@estado">@estado</option>
                            }
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <div class="botones">
                        <input type="submit" value="Crear" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
                    </div>
                </form>
            </div>
        </section>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>

</body>
</html>
