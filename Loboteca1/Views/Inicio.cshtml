@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio - Loboteca</title>
    <link rel="stylesheet" href="~/css/inicio.css">
</head>
<body>
    <!-- Barra de navegación -->
    <header>
        <nav class="navbar">
            
        </nav>

        <nav class="navbar2">
            <ul>
                <li><img src="~/images/libros.png" alt="Libros Electronicos" class="libros"><a href="@Url.Action("Libros", "Libros")">Libros</a></li>
                <li><img src="~/images/sanciones.png" alt="Sanciones" class="sanciones"><a href="@Url.Action("Sanciones", "Sanciones")">sanciones</a></li>
