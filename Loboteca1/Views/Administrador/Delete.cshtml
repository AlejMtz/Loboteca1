@model Loboteca1.Models.AdministradorModel

@{
    Layout = null;
    ViewData["Title"] = "Eliminar Administrador";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/AdministradorDelete.css" />
</head>
<body>

    <!-- Encabezado principal -->
    <header>
        <nav class="navbar">
            <ul class="logo-left">
                <li>
                    <img src="~/images/logo.png" alt="Logo" class="logo">
                </li>
            </ul>
            <h1>LOBOTECA</h1>
            <ul class="account-right">
                <li>
                    <img src="~/images/cuenta.png" alt="Cuenta" class="icono">
                    <a href="@Url.Action("Perfil", "Perfil")">Cuenta</a>
                </li>
            </ul>
        </nav>
    </header>

    <main>
        <section class="main-section">
            <h2 class="section-title">@ViewData["Title"]</h2>

            <!-- Contenedor para eliminar administrador -->
            <div class="formulario-eliminar">
                <h3>¿Seguro que desea eliminar este administrador?</h3>

                <div class="info-admin">
                    <h4>Detalles del Administrador</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Nombre</dt>
                        <dd class="col-sm-9">@Model.Nombre</dd>
                        <dt class="col-sm-3">Apellido Paterno</dt>
                        <dd class="col-sm-9">@Model.apellido_paterno</dd>
                        <dt class="col-sm-3">Apellido Materno</dt>
                        <dd class="col-sm-9">@Model.apellido_materno</dd>
                        <dt class="col-sm-3">Número de Empleado</dt>
                        <dd class="col-sm-9">@Model.numero_de_empleado</dd>
                        <dt class="col-sm-3">Fecha de Inicio</dt>
                        <dd class="col-sm-9">@Model.fecha_de_inicio?.ToString("yyyy-MM-dd")</dd>
                        <dt class="col-sm-3">Fecha de Término</dt>
                        <dd class="col-sm-9">@Model.fecha_de_termino?.ToString("yyyy-MM-dd")</dd>
                    </dl>

                    <!-- Botones para eliminar o cancelar -->
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="botones">
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
        <div class="social-icons">
            <a href="#"><img src="~/images/facebook.png" alt="Facebook"></a>
            <a href="#"><img src="~/images/instagram.png" alt="Instagram"></a>
            <a href="#"><img src="~/images/email.png" alt="Correo"></a>
        </div>
    </footer>

</body>
</html>
