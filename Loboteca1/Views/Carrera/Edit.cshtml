@model Loboteca1.Models.CarreraModel

@{
    ViewData["Title"] = "Editar Carrera";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="nombre_de_la_carrera" class="control-label">Nombre de la Carrera</label>
        <input asp-for="nombre_de_la_carrera" class="form-control" />
        <span asp-validation-for="nombre_de_la_carrera" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="estado" class="control-label">Estado</label>
        <select asp-for="estado" class="form-control">
            <option value="Disponible">Disponible</option>
            <option value="No disponible">No disponible</option>
        </select>
        <span asp-validation-for="estado" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>
