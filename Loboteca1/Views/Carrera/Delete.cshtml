@model Loboteca1.Models.CarreraModel

@{
    ViewData["Title"] = "Eliminar Carrera";
}

<h2>@ViewData["Title"]</h2>

<h3>¿Estás seguro que deseas eliminar esta carrera?</h3>
<div>
    <h4>Carrera</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombre_de_la_carrera)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre_de_la_carrera)
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.estado)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
