@model IEnumerable<Loboteca1.Models.CarreraModel>

@{
    ViewData["Title"] = "Listado de Carreras";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Carrera</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().nombre_de_la_carrera)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().estado)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.nombre_de_la_carrera)</td>
                <td>@Html.DisplayFor(modelItem => item.estado)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
