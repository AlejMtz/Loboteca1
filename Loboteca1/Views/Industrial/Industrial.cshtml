@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ingeniería en Industrial - Loboteca</title>
    <link rel="stylesheet" href="~/css/industrial.css"> <!-- Referencia al archivo CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"> <!-- Bootstrap -->
</head>
<body>

    <!-- Encabezado principal -->
    <header class="header-principal">
        <div class="navbar">
            <h1>Ingeniería en Industrial</h1>
        </div>
    </header>

    <!-- Barra de navegación secundaria (fuera del encabezado principal) -->
    <nav class="navbar2">
        <ul>
            <li>
                <a href="@Url.Action("Inicio", "Inicio")">
                    <img src="~/images/homeI.png" alt="Inicio" class="icono">
                    <span>Inicio</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <img src="~/images/revistaI.png" alt="Revistas" class="icono">
                    <span>Revistas</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <img src="~/images/blog.png" alt="Blog Digital" class="icono">
                    <span>Blog Digital</span>
                </a>
            </li>
            <li>
                <a href="#">
                    <img src="~/images/sancionesI.png" alt="Sanciones" class="icono">
                    <span>Sanciones</span>
                </a>
            </li>
        </ul>
    </nav>


    <main class="main-section">

        <!-- Carrusel de Libros -->
        <section class="carrusel-libros">
            <h2>Libros</h2>
            <div id="librosCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/industrial.jpg" class="d-block w-100" alt="Libro 1">
                        <p>DISPONIBLE</p>
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/libro2.png" class="d-block w-100" alt="Libro 2">
                        <p>DISPONIBLE</p>
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/libro3.png" class="d-block w-100" alt="Libro 3">
                        <p>DISPONIBLE</p>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#librosCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Anterior</span>
                </a>
                <a class="carousel-control-next" href="#librosCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Siguiente</span>
                </a>
            </div>
        </section>

        <!-- Carrusel de Revistas -->
        <section class="carrusel-revistas">
            <h2>Revistas</h2>
            <div id="revistasCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="~/images/revista1.png" class="d-block w-100" alt="Revista 1">
                        <p>DISPONIBLE</p>
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/revista2.png" class="d-block w-100" alt="Revista 2">
                        <p>DISPONIBLE</p>
                    </div>
                    <div class="carousel-item">
                        <img src="~/images/revista3.png" class="d-block w-100" alt="Revista 3">
                        <p>DISPONIBLE</p>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#revistasCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Anterior</span>
                </a>
                <a class="carousel-control-next" href="#revistasCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Siguiente</span>
                </a>
            </div>
        </section>
    </main>

    <!-- Pie de página -->
    <footer>
        <p>&copy; Derechos Reservados Universidad Politécnica del Valle de Toluca</p>
    </footer>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>

