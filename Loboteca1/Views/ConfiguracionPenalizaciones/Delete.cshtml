@model Loboteca1.Models.ConfiguracionPenalizacionesModel

@{
    ViewData["Title"] = "Eliminar Penalización";
}

<h2>@ViewData["Title"]</h2>

<h3>¿Estás seguro que deseas eliminar esta penalización?</h3>
<div>
    <h4>Penalización</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.monto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.monto)
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="id_penalizacion" />
        <div>
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
