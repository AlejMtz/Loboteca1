@model IEnumerable<Loboteca1.Models.ConfiguracionPenalizacionesModel>

@{
    ViewData["Title"] = "Listado de Penalizaciones";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Nueva Penalización</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().monto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.monto)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id_penalizacion" class="btn btn-warning">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.id_penalizacion" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>