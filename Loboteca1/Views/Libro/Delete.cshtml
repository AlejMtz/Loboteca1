@model Loboteca1.Models.LibroModel

@{
    ViewData["Title"] = "Eliminar Libro";
}

<h2>@ViewData["Title"]</h2>

<h3>¿Estás seguro de que deseas eliminar este libro?</h3>

<div>
    <h4>Libro</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Título</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.titulo)</dd>

        <dt class="col-sm-2">ISBN</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.ISBN)</dd>

        <dt class="col-sm-2">Fecha de Publicación</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.fecha_de_publicacion)</dd>

        <dt class="col-sm-2">Género</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.genero)</dd>

        <dt class="col-sm-2">Estado</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.estado)</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.stock)</dd>

        <dt class="col-sm-2">Fecha de Alta</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.fecha_de_alta)</dd>

        <<dt class="col-sm-2">Imagen</dt>
        <dd class="col-sm-10">
            <img src="@Model.ruta_imagen" alt="@Model.titulo" style="max-width: 200px;" />
        </dd>-

        <dt class="col-sm-2">Editorial</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Editorial.Nombre)</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
