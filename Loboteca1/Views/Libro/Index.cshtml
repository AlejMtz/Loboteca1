@model IEnumerable<Loboteca1.Models.LibroModel>

@{
    ViewData["Title"] = "Listado de Libros";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Agregar Nuevo Libro</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.titulo)</th>
            <th>@Html.DisplayNameFor(model => model.ISBN)</th>
            <th>@Html.DisplayNameFor(model => model.fecha_de_publicacion)</th>
            <th>@Html.DisplayNameFor(model => model.genero)</th>
            <th>@Html.DisplayNameFor(model => model.estado)</th>
            <th>@Html.DisplayNameFor(model => model.stock)</th>
            <th>@Html.DisplayNameFor(model => model.fecha_de_alta)</th>
            <th>@Html.DisplayNameFor(model => model.ruta_imagen)</th>
            <th>Editorial</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.titulo)</td>
                <td>@Html.DisplayFor(modelItem => item.ISBN)</td>
                <td>@Html.DisplayFor(modelItem => item.fecha_de_publicacion)</td>
                <td>@Html.DisplayFor(modelItem => item.genero)</td>
                <td>@Html.DisplayFor(modelItem => item.estado)</td>
                <td>@Html.DisplayFor(modelItem => item.stock)</td>
                <td>@Html.DisplayFor(modelItem => item.fecha_de_alta)</td>
                <td>
                    <img src="@item.ruta_imagen" alt="Imagen del libro" style="max-width: 100px;" />
                </td>
                <td>@Html.DisplayFor(modelItem => item.Editorial.Nombre)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-warning">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
